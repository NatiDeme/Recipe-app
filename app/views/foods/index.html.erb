<h1>List of foods</h1>
    <div>
      <%= link_to "Add food", new_food_path %>
    </div>
    <table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @foods.each do |food| %>
    <tr>
      <th><%= food.name %></th>
      <td><%= food.measurement_unit %></td>
      <td><%= food.quantity %></td>
      <td>$<%= food.price %></td>
      <td><%= button_to "Delete", food_path(food.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

