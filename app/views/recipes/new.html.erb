<%= form_with model: @recipe, method: :post, local: true, url: recipes_path, scope: :recipe do |f| %> 

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name,  autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :preparation_time %><br />
    <%= f.number_field :preparation_time %>
  </div>

  <div class="field">
    <%= f.label :cooking_time %><br />
    <%= f.number_field :cooking_time, autocomplete: "quantity" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, autocomplete: "new-price" %>
  </div>
  <div>
  <%= f.label :public %><br />
  <%= f.select :public, [['Yes', true], ['No', false]] %>
  </div>


  <div class="actions">
    <%= f.submit "Add recipe to list" %>
  </div>
<% end %>